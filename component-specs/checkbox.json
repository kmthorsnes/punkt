{
  "name": "pkt-checkbox",
  "css-class": "pkt-input-check",
  "props": {
    "id": {
      "type": "String",
      "required": true
    },
    "defaultChecked": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "checked": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "value": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "hasTile": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "disabled": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "label": {
      "type": "String",
      "required": false
    },
    "labelPosition": {
      "type": "String",
      "default": "right",
      "values": ["right", "left"]
    },
    "hideLabel": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "checkHelptext": {
      "type": "String",
      "required": false
    },
    "hasError": {
      "type": "Boolean",
      "required": false,
      "default": false
    },
    "isSwitch": {
      "type": "Boolean",
      "required": false,
      "default": false
    }
  }
}
